<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.board.mapper.BoardMapper">
	<sql id="condition">
		<where>
			<if test="title != null">
			</if>
		</where>
	</sql>
		<resultMap type="BoardVO" id="ResultMap">
			<result property="title" column="TITLE" />
			<result property="content" column="CONTENT" />
			<result property="writer" column="WRITER" />
		</resultMap>





	<select id="getBoardList" parameterType="ResultMap"></select>

	<select id="getBoardInfo" parameterType="int"
		resultType="BoardVO">
		SELECT board_no
		,title
		,content
		,writer
		,writer_date
		,click_cnt
		,image
		FROM board
		WHERE board_no = #{bno}
	</select>

	<insert id="addBoard" parameterType="BoardVO">
		INSERT INTO board (
		board_no
		,title
		,content
		,writer
		,writer_date
		,click_cnt
		<if test="image != null">
			,image
		</if>
		)
		VALUES(
		#{boardNo}
		,#{title}
		,#{content}
		,#{writer}
		,#{writerDate}
		,#{clickCnt}
		<if test="image != null">
			,#{image}
		</if>
		)
	</insert>

	<delete id="deleteBoard" parameterType="int">
		DELETE FROM board
		WHERE
		board_no = #{bno}
	</delete>

	<update id="updateBoard" parameterType="BoardVO, int">
		UPDATE board
		SET
		<foreach collection="vo" item="index" separator=",">
			#{index}
		</foreach>
		WHERE board_no = #{bno}
	</update>

</mapper>
